---
import '../styles/global.css'
const { title, description } = Astro.props
---

<!doctype html>
<html lang='es'>
  <head>
    <title>{title}</title>
    <meta charset='UTF-8' />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <meta
      name='description'
      content={description}
    />
    <link
      rel='icon'
      type='image/svg+xml'
      href='/icon.svg'
    />
    <script>
      window.addEventListener('hashchange', event => {
        // @ts-ignore
        history.replaceState(null, null, window.location.pathname)
      })
    </script>
    <title>CentralClima SPA</title>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    color: #101820;
    background-color: white;
  }
</style>
