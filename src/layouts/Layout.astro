---
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import Navigation from '../components/Navigation.astro'
import { SEO } from 'astro-seo'
import '../styles/global.css'
---

<!doctype html>
<html lang='es'>
  <head>
    <SEO
      title='CentralClima SPA'
      description='CentralClima SPA - Soluciones Aire Acondicionado integrales para empresas y Hogares - Con mas de 20 años de experiencia en el mercado. - nos dedicamos instalación, mantención, venta y servicio técnico de aire acondicionado.'
      openGraph={{
        basic: {
          title: 'CentralClima SPA',
          type: 'website',
          image: '/logo.svg',
          url: 'https://centralclimaspa.cl',
        },
        optional: {
          description:
            'CentralClima SPA - Soluciones Aire Acondicionado integrales para empresas y Hogares - Con mas de 20 años de experiencia en el mercado. - Instalación, mantención, venta y servicio técnico de aire acondicionado.',
        },
      }}
    />

    <link
      rel='sitemap'
      href='/sitemap-index.xml'
    />
    <meta charset='UTF-8' />
    <meta
      name='viewport'
      content='width=device-width'
    />

    <script
      defer
      src='https://unpkg.com/tailwindcss-intersect@2.x.x/dist/observer.min.js'
    ></script>

    <title>CentralClima SPA</title>
  </head>
  <script>
    window.addEventListener('hashchange', () => {
      // @ts-ignore
      history.replaceState(null, null, window.location.pathname)
    })
  </script>
  <body>
    <Navigation />
    <Header />

    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    color: #101820;
    background-color: white;
    scroll-behavior: smooth;
  }
</style>
