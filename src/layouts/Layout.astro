---
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import Navigation from '../components/Navigation.astro'
import { SEO } from 'astro-seo'

import '../styles/global.css'
---

<!doctype html>
<html lang='es'>
  <head>
    <SEO
      title='CentralClima SpA - Lo mejor en climatización'
      openGraph={{
        basic: {
          title: 'CentralClima SpA',
          type: 'image/svg',
          image: '/logo.svg',
          url: 'https://centralclimaspa.cl',
        },
        optional: {
          description:
            'Central Clima SpA - Soluciones Aire Acondicionado integrales para empresas y Hogares - Con mas de 20 años de experiencia en el mercado.',
        },
      }}
      extend={{
        link: [
          {
            rel: 'sitemap',
            href: '/sitemap-index.xml',
          },
          {
            rel: 'canonical',
            href: 'https://www.centralclimaspa.cl',
          },
        ],
        meta: [
          {
            name: 'description',
            content:
              'Central Clima SPA - Soluciones Aire Acondicionado integrales para empresas y Hogares - Con mas de 20 años de experiencia en el mercado.',
          },
          {
            name: 'keywords',
            content:
              'Central Clima SPA, aire acondicionado, climatizacion, venta de aire acondicionado, instalacion aire acondicionado, central clima, central clima spa, aire acondicionado, instalacion, venta, mantencion',
          },
          {
            name: 'viewport',
            content: 'width=device-width, initial-scale=1.0',
          },
        ],
      }}
    />

    <!-- RECAPTCHA  -->
    <!-- <script
      src='https://www.google.com/recaptcha/api.js'
      async
      defer
    ></script> -->

    <script
      defer
      src='https://unpkg.com/tailwindcss-intersect@2.x.x/dist/observer.min.js'
    ></script>
    <meta charset='UTF-8' />
    <title>CentralClima SPA</title>
  </head>
  <script>
    window.addEventListener('hashchange', () => {
      // @ts-ignore
      history.replaceState(null, null, window.location.pathname)
    })
  </script>
  <body>
    <Navigation />
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    color: #101820;
    background-color: white;
    scroll-behavior: smooth;
  }
</style>
