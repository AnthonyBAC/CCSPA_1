---
import { Image } from 'astro:assets'
---

<footer
  class='bg-gray-900 text-neutral-content flex flex-col gap-10 lg:grid lg:grid-cols-3 p-10 text-sm text-left'
>
  <div class='flex lg:flex-row flex-grow flex-col gap-10'>
    <nav class='flex flex-col gap-2'>
      <h6 class='footer-title'>Redes Sociales</h6>
      <a class='link link-hover'>Whatsapp</a>
      <a class='link link-hover'>Instagram</a>
      <a class='link link-hover'>Facebook</a>
    </nav>
    <nav class='flex flex-col gap-2'>
      <h6 class='footer-title'>Contacto</h6>
      <a class='link link-hover'>+569&nbsp;5724&nbsp;2744</a>
      <a class='link link-hover'>contactocentralclima@gmail.com</a>
    </nav>
  </div>

  <div class='h-full w-full flex justify-center items-end'>
    <h6 class='italic'>
      2025 © CentralClima SPA – Todos los derechos reservados
    </h6>
  </div>

  <div
    class='logos flex flex-grow flex-col justify-between text-neutral-content items-end'
  >
    <h6 class='footer-title text-center'>
      Empresas que han confiado en nosotros
    </h6>
    <div class='lg:flex lg:flex-row grid grid-cols-2 w-full justify-end gap-5'>
      <div class='flex flex-col items-center lg:items-end gap-5'>
        <Image
          src='/logo-ccu.png'
          alt='ccu logo'
          width={100}
          height={100}
        />
        <Image
          src='/dentisani.png'
          alt='dentisani logo'
          width={100}
          height={100}
        />
      </div>
      <div class='flex flex-col items-center lg:items-end gap-5'>
        <Image
          src='/dunamis.png'
          alt='dunamis logo'
          width={100}
          height={100}
        />
        <Image
          src='/reali.png'
          alt='reali logo'
          width={100}
          height={100}
        />
      </div>
    </div>
  </div>
</footer>
