---
import Image from 'astro:assets'
---

<section
  class='2xl:h-screen h-full w-full lg:p-25 2xl:px-25 lg:px-10 px-8 justify-center items-center sm:pt-25 gap-10'
>
  <div
    class='flex flex-col lg:flex-row max-w-[1540px] w-full mx-auto items-center justify-center gap-10'
  >
    <div
      class='flex flex-col max-w-[800px] lg:w-[850px] w-full lg:max-h-[700px] items-start justify-center bg-[#f2f2f2] p-10 rounded-2xl shadow-2xl'
    >
      <h1
        class='2xl:text-5xl lg:text-3xl text-2xl text-gray-900 font-bold py-5'
      >
        Formulario <br /> Contacto
      </h1>
      <div class='flex flex-col w-full justify-center'>
        <form
          action=''
          class='flex flex-col gap-5 w-full'
        >
          <!-- Nombre y apellido -->
          <div
            class='2xl:grid 2xl:grid-cols-2 flex flex-col gap-5 2xl:justify-center 2xl:items-center'
          >
            <div class='flex'>
              <input
                type='text'
                name='name'
                placeholder='Nombre'
                class='border-0 bg-[#d3d3d3] border-b-2 rounded-lg border-[#00000030] px-2 py-1 text-gray-900 focus:outline-[#00000030] focus:outline-1 placeholder:text-[#00000080] placeholder:font-light lg:w-[200px] w-full'
              />
            </div>
            <div class='flex'>
              <input
                type='text'
                name='lastName'
                placeholder='Apellido'
                class='border-0 bg-[#d3d3d3] border-b-2 rounded-lg border-[#00000030] px-2 py-1 text-gray-900 focus:outline-[#00000030] focus:outline-1 placeholder:text-[#00000080] placeholder:font-light lg:w-[200px] w-full'
              />
            </div>
          </div>
          <!-- Nombre y apellido -->
          <!-- Telefono -->
          <div class='flex gap-5 justify-start items-center'>
            <div class='flex'>
              <input
                type='number'
                name='phone'
                placeholder='Telefono'
                class='border-0 bg-[#d3d3d3] border-b-2 rounded-lg border-[#00000030] px-2 py-1 text-gray-900 focus:outline-[#00000030] focus:outline-1 placeholder:text-[#00000080] placeholder:font-light lg:w-[200px] w-full'
              />
            </div>
          </div>
          <!-- Telefono -->
          <!-- Email -->
          <div class='grid gap-5 justify-start items-center'>
            <div class='flex'>
              <input
                type='email'
                name='email'
                placeholder='Email'
                class='border-0 bg-[#d3d3d3] border-b-2 rounded-lg border-[#00000030] px-2 py-1 text-gray-900 focus:outline-[#00000030] focus:outline-1 placeholder:text-[#00000080] placeholder:font-light lg:w-[200px] w-full'
              />
            </div>
          </div>
          <!-- Email -->
          <!-- Tipo de lugar -->
          <div class='flex items-center'>
            <select
              id='select'
              class='flex g:w-[50%] lg:w-[200px] w-full items-center border-b-2 border-0 rounded-lg border-[#00000030] px-2 py-1 focus:outline-[#00000030] focus:outline-1'
            >
              <option
                value='null'
                selected
                disabled
                >Tipo de espacio</option
              >
              <option value='casa'>Casa</option>
              <option value='departamento'>Departamento</option>
              <option value=''>Departamento</option>
            </select>
          </div>
          <div class='w-full h-[100px] flex'>
            <textarea
              style='resize: none;'
              placeholder='Mensaje'
              id='message'
              name='message'
              class='border-0 w-full h-full bg-[#d3d3d3] border-b-2 rounded-lg border-[#00000030] px-2 py-1 text-gray-900 focus:outline-[#00000030] focus:outline-1'
            ></textarea>
          </div>
          <div class='w-full flex justify-end'>
            <button
              class='bg-[#003162] h-12 lg:w-[200px] w-full rounded-lg text-white font-bold hover:bg-[#00214d] transition-all'
            >
              Enviar
            </button>
          </div>
        </form>
      </div>
    </div>
    <div class='h-[700px] w-full hidden lg:block'>
      <img
        src='/air_repairing.png'
        alt='contacto'
        class='h-full w-full object-cover 2xl:object-left'
      />
    </div>
  </div>
</section>

<script>
  ;(function () {
    var e = document.getElementById('select')
    e.onchange = function () {
      if (e.value != 'null') {
        e.style.color = '#000'
      } else {
        e.style.color = '#aaa'
      }
    }
  })()
</script>
